<div class="col-md-6 offset-md-3">
  <h1 class="text-center display-4 m-5">Log in</h1>
  <%= form_tag(sessions_path) do %>
    <% if flash.any? %>
      <div class="alert alert-danger" role="alert">
        <ul>
        <% flash.each do |name, message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group row">
      <%= label_tag :email, nil, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
      <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'e.g. me@epfl.ch' %>
      </div>
    </div>
    <div class="form-group row">
      <%= label_tag :password, nil, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
      <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>
    </div>
     <div class="form-group row">
       <div class="col-sm-10 offset-sm-2">
         <%= button_tag 'Log in', class: 'btn btn-primary btn-block', name: nil %>
       </div>
     </div>
  <% end %>
</div>
